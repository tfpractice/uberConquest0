<div class = "siteDiv" id = "sitePurpose">
	<div class = "appContainer" id = "purposeContainer">
		<div id = "summaryDiv">
			<h2 class = "summaryText"> Conquest <span id="inMarket">in-market</span> </h2>
			<h2 class = "summaryText"> customers directly from </h2>
			<h2 class = "summaryText"> your competitors </h2>
		</div>
		
		<div class = "imageContainer" > <%= image_tag "handEarthPic.png", id: "purposeImage"%> 
			</div>
	</div>
</div>



<div class = "siteDiv" id = "odometerDiv"> 
	<div class = "appContainer" id = "odometerContainer">
		<p class = "odometerText">UberConquest has 
			<span class = "odometer">682682682</span>
			mobile phone profiles
		</p> 
		<p class = "odometerText"> that allow you to reach precise audiences </p>
	</div>
</div>


<section id = "segmentSection"> 
	<div class = "appContainer" id = "segmentContainer">
		<h2> we have 100,000s  of custom segments </h2>
	
		<% @categories.each do |category| %>
		<div class = "categoryDiv"> 
			<h2> <%= category.name %> </h2>
			<% category.segments.each do |segment| %>
				<ul class = "segmentList">
					<li class = "segmentItem"> 
						<p class = "segmentName">
							<%= segment.name %> <span class = "segmentCount"> <%= segment.conquestCount %> </span>
						</p> 
					</li>
					<li> <%= link_to "#{segment.name}", segment_path(@segment), class: "fancybox fancybox.ajax" %> </li>
				</ul>
			<% end %>
			
		</div>
	
		<% end %>
	</div>

</section>

